@model PROYECTO_E_COMERCE.Models.Producto

@{
    ViewBag.Title = "Selecciona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Start Shop Detail  -->
<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img src="@Url.Content(string.Format("~/images/imgA-{0}.jpg",Model.idproducto))" class="d-block w-100" alt="First slide" />
                            
                        </div>
                        <div class="carousel-item">
                            <img src="@Url.Content(string.Format("~/images/imgB-{0}.jpg",Model.idproducto))" class="d-block w-100" alt="Second slide"/>
                            
                        </div>
                        <div class="carousel-item">
                            <img src="@Url.Content(string.Format("~/images/imgC-{0}.jpg",Model.idproducto))" class="d-block w-100" alt="Third slide" />
                           
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                        <span class="sr-only">Next</span>
                    </a>
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                            <img class="d-block w-100 img-fluid" src="images/smp-img-01.jpg" alt="" />
                        </li>
                        <li data-target="#carousel-example-1" data-slide-to="1">
                            <img class="d-block w-100 img-fluid" src="images/smp-img-02.jpg" alt="" />
                        </li>
                        <li data-target="#carousel-example-1" data-slide-to="2">
                            <img class="d-block w-100 img-fluid" src="images/smp-img-03.jpg" alt="" />
                        </li>
                    </ol>
                </div>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="single-product-details">
                    <h2>@Html.DisplayFor(model => model.nombreproducto)</h2>
                    <h5> @Html.DisplayFor(model => model.precio)</h5>
                    <p class="available-stock"><span> <b>STOCK: @Html.DisplayFor(model => model.stock)</b></span><p>
                        <h4>Short Description:</h4>
                    <p>
                        @Html.DisplayFor(model => model.descripcion )            
                    </p>
                    @using (Html.BeginForm())

                    {
                        <ul>
                            <li>
                                <div class="form-group quantity-box">
                                    <label class="control-label">Cantidad</label>
                                    @Html.Hidden("id", Model.idproducto)
                                    <input class="form-control" value="1" min="1" max="20" type="number" name="cantidad">

                                </div>
                            </li>
                        </ul>

                        <div class="price-box-bar">
                            <div class="cart-and-bay-btn">
                                @if (Model.stock <= 0)
                                {
                                    <input type="submit" value="Registrar" class="btn hvr-hover" disabled style="padding: 10px 20px;font-weight: 700;color: #ffffff;border: none;background:red" />

                                }
                                else
                                {
                                    <input type="submit" value="Registrar" class="btn hvr-hover" style="padding: 10px 20px;font-weight: 700;color: #ffffff;border: none;" />

                                }
                                @Html.ActionLink("Retornar", "Tienda", null, new { @class = "btn hvr-hover" })
                            </div>
                        </div>
                    }
                    </div>
            </div>
        </div>
    </div>
</div>
